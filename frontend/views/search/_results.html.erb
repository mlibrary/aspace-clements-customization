<%
  title = I18n.t("search_results.title") if title.nil?
  # Added
  @display_context = true
%>

<%
  ## Start of Modifications
  model = "accession"
  add_pref_columns(model)
  # Add content_description column at end
  # This is cribbed w/ minor changes from original add_pref_columns() method
  prop = 'content_description'
  enum_locale_key = "#{model}_#{prop}"
  add_column(I18n.t("#{model}.#{prop}"), { locale_key: enum_locale_key, model: model })
  ## End of Modifications
%>

<div class="row">
  <div class="col-md-3">
    <%= render_aspace_partial :partial => "search/filter" %>
  </div>
  <div class="col-md-9">
    <div class="record-toolbar">
      <% unless @hide_csv_download %>
      <div class="btn-group pull-right">
        <%= link_to I18n.t("actions.export_csv"), request.parameters.merge({ :format => :csv, :fields => fields}), id: "searchExport",  class:  "btn btn-sm btn-info" %>
      </div>
      <% end %>
      <br style="clear:both" /> 
    </div>
    <div class="record-pane">
      <%= link_to_help :topic => "search" %>
      <% if !params[:linker] %>
        <h2><%= title %></h2>
      <% end %>
      <%= render_aspace_partial :partial => "search/listing" %>
    </div>
  </div>
</div>
